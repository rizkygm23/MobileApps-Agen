<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006EBB">

    <!-- Background Logo Image -->

    <!-- Card Container -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="459dp">

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/login_card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Create Your Account"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Name -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_profile_active"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Address -->
        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_address_active"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your address"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Email -->
        <EditText
            android:id="@+id/editEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_email_active"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Password -->
        <EditText
            android:id="@+id/editPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_password_active"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_password_active"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/poppins_semibold"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/textBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Already have an account? Login"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>
</RelativeLayout>
